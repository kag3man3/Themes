@model PopularProductTagsModel
@using Nop.Web.Models.Catalog;
@if (Model.Tags.Count > 0)
{
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">
                    <a data-toggle="collapse" href="#collapseTags">
                        @T("Products.Tags.Popular")
                        <i class="fa fa-angle-down"></i>
                    </a>
                </h2>
            </div>
            <div id="collapseTags" class="panel-collapse collapse in">
                <div class="panel-body">
                    <div class="margin-bottom-10">
                        @foreach (var item in Model.Tags)
                        {
                            <a href="@Url.RouteUrl("ProductsByTag", new {productTagId = item.Id, SeName = item.SeName})" style="font-size: @(Model.GetFontSize(item))%;">@item.Name</a>
                        }
                    </div>
                    @if (Model.TotalTags > Model.Tags.Count)
                    {
                        <div class="view-all">
                            <a href="@Url.RouteUrl("ProductTagsAll")" class="btn-u btn-u-sea-shop">@T("Products.Tags.Popular.ViewAll")</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}