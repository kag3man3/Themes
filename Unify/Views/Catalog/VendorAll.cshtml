@model IList<VendorModel>
@{
    Layout = "~/Views/Shared/_ColumnsTwo.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.Vendors").Text);
    //page class
    Html.AppendPageCssClassParts("html-vendor-list-page");
}
@using Nop.Web.Models.Catalog;
<div class="page vendor-list-page">
    <div class="panel panel-default form-panel">
        <div class="panel-heading">
            <h3>@T("Vendors.List")</h3>
        </div>
        <div class="panel-body">
            @if (Model.Count > 0)
            {
                <ul class="vendor-list">
                    @foreach (var item in Model)
                    {
                        <li>
                            <a href="@Url.RouteUrl("Vendor", new { vendorId = item.Id, SeName = item.SeName })" class="vendor">
                                @item.Name
                            </a>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
</div>
