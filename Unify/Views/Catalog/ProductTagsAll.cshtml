@model PopularProductTagsModel
@{
    Layout = "~/Views/Shared/_ColumnsTwo.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.AllProductTags").Text);
    //page class
    Html.AppendPageCssClassParts("html-product-tags-all-page");
}
@using Nop.Web.Models.Catalog;
<div class="features_items"><!--features_items-->
    <h2 class="title text-center">@T("Products.Tags.All")</h2>
    <div class="custom-page-box-div">
        @if (Model.Tags.Count > 0)
        {
            <div class="row">
                    
                    @foreach (var item in Model.Tags)
                    {
                        <div class="col-md-3"><a href="@Url.RouteUrl("ProductsByTag", new { productTagId = item.Id, SeName = item.SeName })" class="producttag">
                                @item.Name</a> </div>
                    }
                
            </div>
        }
    </div>
</div>

