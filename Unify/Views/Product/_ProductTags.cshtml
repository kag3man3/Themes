@model IList<ProductTagModel>
@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <p @*class="wishlist-category"*@>
        <strong>@T("Products.Tags"):</strong>
        @for (int i = 0; i < Model.Count; i++)
                {
                <a href="@Url.RouteUrl("ProductsByTag", new { productTagId = Model[i].Id, SeName = Model[i].SeName })">
                    @Model[i].Name
                </a> <span>@T("Products.Tags.Count", Model[i].ProductCount)</span>
            if (i != Model.Count - 1)
            {
                <text>, </text>
            }
        }
    </p>
}