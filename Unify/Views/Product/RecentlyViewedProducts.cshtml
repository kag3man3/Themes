@model IList<ProductOverviewModel>
@{
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.RecentlyViewedProducts").Text);
    //page class
    Html.AppendPageCssClassParts("html-recently-viewed-products-page");

    <!-- CSS Implementing Plugins -->
    Html.AppendCssFileParts("~/Themes/Unify/assets/plugins/owl-carousel/owl-carousel/owl.carousel.css");


    <!-- JS Page Level -->
    Html.AppendScriptParts("~/Themes/Unify/E-Commerce/assets/js/plugins/owl-carousel.js");

    <!-- JS Implementing Plugins -->
    Html.AppendScriptParts("~/Themes/Unify/E-Commerce/assets/plugins/owl-carousel/owl-carousel/owl.carousel.js");
}
@using Nop.Web.Models.Catalog;

<div class="heading heading-v1 margin-bottom-20">
    <h2 class="title text-center">@T("Products.RecentlyViewedProducts")</h2>
    @*<p></p>*@
</div>
@if (Model.Count > 0)
{
    <div class="filter-results">
        @for (var i = 0; i < Model.Count; i += 4)
        {
            var productsInRowCount = (i + 4 <= Model.Count) ? 4 : Model.Count - i;
            var products = Model.ToList().GetRange(i, productsInRowCount);

            <div class="row illustration-v2 margin-bottom-30">
                @foreach (var product in products)
                {
                    <div class="col-md-3">
                        @Html.Partial("_ProductBox", product)
                    </div>
                }
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info square-box">
        No Recently Viewed Products are Available
    </div>
}

