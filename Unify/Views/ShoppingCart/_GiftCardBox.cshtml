@model ShoppingCartModel.GiftCardBoxModel
@using Nop.Web.Models.ShoppingCart;
@if (Model.Display)
{
    <div class="giftcard-box">
        <h3>@T("ShoppingCart.GiftCardCouponCode")</h3>
        @if (!String.IsNullOrEmpty(Model.Message))
        {
            <p>
                @Model.Message
            </p>
        }
        @{
            var tooltip = @T("ShoppingCart.GiftCardCouponCode.Tooltip");
        }
        <input name="giftcardcouponcode" class="form-control margin-bottom-10" type="text" placeholder="@tooltip">
        <input type="submit" name="applygiftcardcouponcode" value="@T("ShoppingCart.GiftCardCouponCode.Button")" class="btn-u btn-u-sea-shop" />
    </div>
}