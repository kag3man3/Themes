@model ShoppingCartModel.DiscountBoxModel
@using Nop.Web.Models.ShoppingCart;
@if (Model.Display)
{
    <div class="discount-box">
        <h3>@T("ShoppingCart.DiscountCouponCode")</h3>
        @if (!String.IsNullOrEmpty(Model.Message))
        {
            <p>
                @Model.Message
            </p>
        }
        @if (!String.IsNullOrEmpty(Model.CurrentCode))
        {
            <p>
                @string.Format(T("ShoppingCart.DiscountCouponCode.CurrentCode").Text, Model.CurrentCode)
            </p>
        }
        @{
            var tooltip = @T("ShoppingCart.DiscountCouponCode.Tooltip");
        }
        <input name="discountcouponcode" class="form-control margin-bottom-10" type="text" placeholder="@tooltip">
        <input type="submit" name="applydiscountcouponcode" value="@T("ShoppingCart.DiscountCouponCode.Button")" class="btn-u btn-u-sea-shop" />
    </div>
}